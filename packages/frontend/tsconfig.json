{
    "include": ["**/*.ts", "**/*.tsx", "src/index.js"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "jsx": "react",
      "target": "es2016",
      "lib": ["es6","dom"],
      "module": "commonjs",
      "composite": true,
      "noImplicitAny": false,
      "rootDir": "src",
      "resolveJsonModule": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "references": [
      {
        "path": "../shared"
      }
    ]
  }