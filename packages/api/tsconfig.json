{
    "include": ["**/*.ts", "**/*.tsx", "src/index.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "composite": true,
      "lib": ["es6"],
      "module": "commonjs",
      "noImplicitAny": false,
      "rootDir": "src",
      "resolveJsonModule": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true
    },
    "references": [
      { "path": "../shared" }
    ]
  }